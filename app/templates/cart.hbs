<section class="cart">
    <div class="container">

        <div class="cart__title">
            <h2>Shopping Cart</h2>
        </div>

        {{#each this.cart.itemList as |item|}}
            <div class="cart__list">
                <h4>{{ item.name }}</h4>
                
                <h4>{{ currency item.price }}</h4>

                <input 
                type="number" 
                class="cart__input" 
                value={{item.count}}
                {{on "input" (fn this.updateItemCount item)}}
                >
            </div>
        {{/each}}

        <div class="cart__row">
            <span>Subtotal</span>
            <span>{{ currency this.subtotal}}</span>
        </div>

        <div class="cart__row">
            <span>Tax</span>
            <span>{{ currency this.tax}}</span>
        </div>

        <div class="cart__row">
            <span>Total</span>
            <span>{{ currency this.total}}</span>
        </div>
        
        

    </div>
</section>