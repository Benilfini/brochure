<section class="cart">
    <div class="container">

        <div class="cart__title">
            <h2>Shopping Cart</h2>
        </div>

        <div class="cart__row">
            <span>Subtotal</span>
            <span>{{this.subtotal}}</span>
        </div>

        <div class="cart__row">
            <span>Tax</span>
            <span>{{this.tax}}</span>
        </div>

        <div class="cart__row">
            <span>Total</span>
            <span>{{this.total}}</span>
        </div>
        
        <div class="cart__cta">
        <LinkTo @route="cart" class="button">Checkout</LinkTo>
        </div>

    </div>
</section>